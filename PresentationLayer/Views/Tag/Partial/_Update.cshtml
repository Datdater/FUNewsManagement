@model PresentationLayer.Models.TagViewModels.TagUpdateViewModel
@{
    Layout = null;
}

<div class="modal fade" id="updateTagModal" tabindex="-1" aria-labelledby="updateTagModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateTagModalLabel">Update Tag</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateTagForm" asp-action="Update" asp-controller="Tag" method="post">
                    <input type="hidden" asp-for="TagID" /> <!-- Hidden field for Tag ID -->

                    <div class="form-group">
                        <label asp-for="TagName"></label>
                        <input asp-for="TagName" class="form-control" required />
                        <span asp-validation-for="TagName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Note"></label>
                        <textarea asp-for="Note" class="form-control"></textarea>
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>

                    <button type="button" id="submitUpdate" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
