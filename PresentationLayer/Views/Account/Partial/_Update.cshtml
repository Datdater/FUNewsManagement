@model PresentationLayer.Models.AccountViewModels.AccountUpdateViewModel
@{
    Layout = null;
}
<div class="modal fade" id="updateAccountModal" tabindex="-1" aria-labelledby="updateAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateAccountModalLabel">Update Account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="updateAccountForm" asp-action="Update" method="post">
                    <input type="hidden" asp-for="AccountID" /> <!-- Hidden field for the Account ID -->

                    <div class="form-group">
                        <label asp-for="AccountName"></label>
                        <input asp-for="AccountName" class="form-control" required />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AccountEmail"></label>
                        <input asp-for="AccountEmail" type="email" class="form-control" required />
                        <span asp-validation-for="AccountEmail" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AccountRole"></label>
                        <select asp-for="AccountRole" class="form-control" asp-items="ViewBag.Roles" required>
                            <option value="">-- Select Role --</option>
                        </select>
                        <span asp-validation-for="AccountRole" class="text-danger"></span>
                    </div>

                    <button type="button" id="submitUpdate" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
